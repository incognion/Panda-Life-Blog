<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Post Your Blog</li>
    </ol>
</nav>

<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Post Your Blog</h1>
    <div class="col-lg-6 mx-auto">
        <p class="lead">Start sharing your thoughts with the world!</p>
    </div>
</div>

<div class="row justify-content-center">

    <% if(infoSubmitObj !='' ){ %>
        <div class="col-8 alert alert-success" role="alert">
            <%= infoSubmitObj %>
        </div>
        <% } %>

            <% if(infoErrorsObj !='' ){ %>
                <div class="col-8 alert alert-danger" role="alert">
                    <%= infoErrorsObj[0].message %>
                </div>
                <% } %>

                    <div class="col-8">
                        <form action="/submit-blog" enctype="multipart/form-data" method="POST">

                            <div class="row g-3">
                                <div class="col-12">
                                    <label for="email" class="form-label">Email Address <span
                                            style="color: red;">*</span></label>
                                    <input type="email" name="email" placeholder="you@example.com" class="form-control"
                                        id="email" required>
                                </div>

                                <div class="col-12">
                                    <label for="name" class="form-label">Blog Title <span
                                            style="color: red;">*</span></label>
                                    <input type="text" name="name" placeholder="Enter a compelling title"
                                        class="form-control" id="name" required>
                                </div>

                                <div class="col-12">
                                    <label for="description" class="form-label">Blog Description <span
                                            style="color: red;">*</span></label>
                                    <textarea name="description" id="description"
                                        placeholder="Describe your blog content here..." class="form-control" cols="30"
                                        rows="5" minlength="200" required></textarea>
                                    <small class="form-text text-muted">Minimum 200 characters required</small>
                                </div>

                                <div class="col-12">
                                    <label for="category">Blog Category <span style="color: red;">*</span></label>
                                    <select name="category" class="form-select form-control" aria-label="Category"
                                        required>
                                        <option selected disabled value="">Select Category</option>
                                        <option value="Science">Science</option>
                                        <option value="Technology">Technology</option>
                                        <option value="Management">Management</option>
                                        <option value="Business">Business</option>
                                        <option value="Humanities">Humanities</option>
                                        <option value="Other">Other</option>
                                    </select>
                                </div>

                                <div class="col-12">
                                    <label for="image">Blog Image</label>
                                    <input type="file" class="form-control" name="image" accept="image/*">
                                </div>

                                <div class="col-12">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="invalidCheck"
                                            required>
                                        <label class="form-check-label" for="invalidCheck">
                                            Agree to terms and conditions <span style="color: red;">*</span>
                                        </label>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary">Submit Blog</button>
                                </div>
                            </div>
                        </form>
                    </div>
</div>