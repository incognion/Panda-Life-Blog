<h1 class="pb-4">Read a random blog</h1>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Read a random blog</li>
    </ol>
</nav>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-5">
    <% if(blog != ''){ %>
            <a href="/blog/<%= blog._id %>" class="col text-center cat_link">
            <div class="cat_img cat_img--large shadow">
                <img src="<%- blog.image %>" alt="<%= blog.name %>" loading="lazy">
            </div>
            <div class="pt-1"><%= blog.name %> </div>
        </a>
        <% } else { %>
            <p>No blogs found</p>
        <% } %> 
</div>