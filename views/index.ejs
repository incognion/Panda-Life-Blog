<div class="row flex-lg-row-reverse align-items-center g-5 py-4 mb-4">
    <div class="col-12 col-lg-6">
        <img src="/img/top-img.png" alt="Panda Life Blog" width="666" height="555" class="d-block mx-lg-auto img-fluid"
            loading="lazy">
    </div>
    <div class="col-12 col-lg-6">
        <h1 class="display-4 fw-bold mb-3">Panda Life</h1>
        <h2 class="display-7 fw-bold mb-3">A community of bloggers and readers</h2>
        <p class="lead">Welcome to Panda Life, where you can share your thoughts and discover a diverse range of blogs.
            Whether you're an expert or a newcomer, we invite you to contribute your knowledge and experiences. Whatever
            your interest—be it business, management, technology, science, humanities, or beyond—there's something here
            for you.</p>

        <div class="d-grid gap-2 d-md-flex justify-content-md-start">
            <a href="/explore-latest" class="btn btn-outline-light btn-dark btn-lg px-4 me-md-2"
                style="border: .1mm solid black;">Explore Latest Blogs</a>
            <a href="/explore-random" class="btn btn-outline-secondary btn-lg px-4 me-md-2">Read a random blog</a>
        </div>
    </div>

</div>

<!-- Categories -->

<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">

    <% if(categories !='' ){ %>
        <% categories.forEach(function(category,index){ %>
            <a href="/categories/<%- category.name %> " class="col text-center cat_link">
                <div class="cat_img shadow">
                    <img src="/img/<%- category.image %> " alt="<%- category.name %>" loading="lazy">
                </div>
                <div class="pt-1"><%- category.name %></div>
            </a>
            <% }) %>
                <% } %>

                    <a href="/categories" class="col text-center cat_link">
                        <div class="cat_img shadow">
                            <img src="/img/view-all.jpg" alt="View all categories" loading="lazy">
                        </div>
                        <div class="pt-1">View All</div>
                    </a>

</div>


<!-- Latest -->

<section>
    <div class="d-flex mb-2 align-items-center">
        <h2>Latest Blogs</h2>
        <a href="/explore-latest" class="ms-auto">View More</a>
    </div>

    <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
        <% if(blogger !='' ){ %>
            <% blogger.latest.forEach(function(blog,index){ %>
                <a href="/blog/<%= blog._id %> " class="col text-center cat_link">
                    <div class="cat_img cat_img--large shadow">
                        <img src="<%- blog.image %> " alt="<%= blog.name %>" loading="lazy">
                    </div>
                    <div class="pt-1">
                        <%= blog.name %>
                    </div>
                </a>
                <% }) %>
                    <% } else { %>
                        <p>No blogs found</p>
                        <% } %>
    </div>
</section>

